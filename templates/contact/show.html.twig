{% extends 'base.html.twig' %}
{% block title %}Contact{% endblock %}

{% block body %}
<br><br><br><br>
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Nom_contact</th>
                <td>{{ contact.NomContact }}</td>
            </tr>
            <tr>
                <th>Tel_contact</th>
                <td>{{ contact.TelContact }}</td>
            </tr>
            <tr>
                <th>Sujet_contact</th>
                <td>{{ contact.sujetContact }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contact_index') }}">back to list</a>

    <a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>

