{% extends 'base.html.twig' %}

{% block title %}Branche index{% endblock %}

{% block body %}
    <h1>Branche index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_branche</th>
                <th>Description</th>
                <th>Responsable</th>
                <th>Liste_membres</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for branche in branches %}
            <tr>
                <td>{{ branche.id }}</td>
                <td>{{ branche.NomBranche }}</td>
                <td>{{ branche.description }}</td>
                <td>{{ branche.Responsable }}</td>
                <td>{{ branche.ListeMembres }}</td>
                <td>{{ branche.type }}</td>
                <td>
                    <a href="{{ path('branche_show', {'id': branche.id}) }}">show</a>
                    <a href="{{ path('branche_edit', {'id': branche.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('branche_new') }}">Create new</a>
{% endblock %}
